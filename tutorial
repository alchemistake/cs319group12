import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class GameFrame extends JFrame 
{
	BufferedImage myPicture;
	
	GameFrame()
	{
		this.setTitle("Astunc"); //sets the title of the frame
		this.setSize(750,750); //sets the size of the frame to a constant 
		
		try // simple exeption handler 
		{
			myPicture = ImageIO.read(new File("C:\\Users\\asuspc\\Desktop\\Tutorial.png")); // this puts a png file to the frame 
		} catch (IOException e) {
			// TODO 
			// somethings can be added here
			e.printStackTrace();
		}
		JLabel picLabel = new JLabel(new ImageIcon(myPicture));
		add(picLabel);
		setVisible(true);
	}
}
